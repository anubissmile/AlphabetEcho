<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.roomscrumxyz.anubissmile.alphabetecho">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.roomscrumxyz.anubissmile.thaiecho.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.roomscrumxyz.anubissmile.thaiecho.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="com.roomscrumxyz.anubissmile.thaiecho.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name="com.roomscrumxyz.anubissmile.thaiecho.FirstPage" />
        <activity android:name="com.roomscrumxyz.anubissmile.thaiecho.AlphabelListView" />
        <activity android:name="com.roomscrumxyz.anubissmile.thaiecho.GameSpeakTH" />
        <activity android:name="com.roomscrumxyz.anubissmile.thaiecho.ListeningTH" />
        <activity
            android:name="com.roomscrumxyz.anubissmile.thaiecho.OurTeamActivity"
            android:label="@string/title_our_team" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name="com.roomscrumxyz.anubissmile.thaiecho.SetNameActivity"
            android:label="@string/title_activity_set_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
