<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="#7b7b9b"
    tools:context="com.roomscrumxyz.anubissmile.alphabetecho.FirstPage">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/app_logo_bottom"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:foregroundGravity="bottom"
        android:layout_marginBottom="-370dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listening_btn"
        android:src="@drawable/listening_menu"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speek_out_btn"
        android:src="@drawable/speek_out_menu"
        android:layout_below="@+id/listening_btn"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/our_team_btn"
        android:src="@drawable/our_team"
        android:layout_below="@+id/speek_out_btn"
        android:layout_alignLeft="@+id/speek_out_btn"
        android:layout_alignStart="@+id/speek_out_btn" />

</RelativeLayout>
