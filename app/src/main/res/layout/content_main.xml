<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.roomscrumxyz.anubissmile.alphabetecho.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo_thai_flag"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_index_logo"
        android:contentDescription="LOGO_THAILAND_FLAG" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/listening_btn"
        android:id="@+id/listening_btn"
        android:layout_below="@+id/spelling_btn"
        android:layout_centerHorizontal="true"
        android:textSize="20dip" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spelling_btn"
        android:id="@+id/spelling_btn"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />


</RelativeLayout>
